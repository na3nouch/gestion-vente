<body>

  <div class="container d-flex flex-column align-items-center">

    <div class="d-flex flex-column align-items-center mt-5 mb-3">
      <img src="/images/log.svg" class="flipInX" alt="" width="200">
    </div>

    <form action="/auth/login" method="POST" class="form-signin w-100 mx-auto" style="max-width: 500px">

      <div class="form-group">
        <label for="email">Email address</label>
        <input type="email" id="email" name="email" class="form-control mb-3" placeholder="Entrer votre adresse email"
          required autofocus>
      </div>

      <div class="form-group">
        <label for="password">Mot de passe</label>
        <input type="password" id="password" name="password" class="form-control"
          placeholder="Entrer votre mot de passe" required>
      </div>


      <button class="btn btn-lg btn-primary btn-block mt-3" type="submit">connexion</button>


    </form>

